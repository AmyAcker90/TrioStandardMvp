<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>

    <!--自定义toolbar的左边距-->
    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性边距为0dp-->
    </style>

    <style name="CustomButton" parent="@android:style/Widget.Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ProgressButton" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="StyleTextProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/layer_text_progress</item>
    </style>
</resources>

